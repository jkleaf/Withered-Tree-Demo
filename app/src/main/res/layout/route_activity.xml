<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="31dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="31dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/textview_border"
            android:gravity="center_horizontal"
            android:text="编号:"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/id_tv"
            android:layout_width="325dp"
            android:layout_height="31dp"
            android:background="@drawable/textview_border"
            android:gravity="center_horizontal"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="31dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="31dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/textview_border"
            android:gravity="center_horizontal"
            android:text="名称:"
            android:textColor="#000000" />

        <TextView
            android:textSize="12sp"
            android:id="@+id/treename_tv"
            android:layout_width="325dp"
            android:layout_height="match_parent"
            android:background="@drawable/textview_border"
            android:gravity="center_horizontal"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin3"
        android:layout_width="match_parent"
        android:layout_height="31dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="31dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/textview_border"
            android:gravity="center_horizontal"
            android:text="拍摄者:"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/userid_tv"
            android:layout_width="325dp"
            android:layout_height="31dp"
            android:background="@drawable/textview_border"
            android:gravity="center_horizontal"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin4"
        android:layout_width="match_parent"
        android:layout_height="31dp">

        <TextView
            android:background="@drawable/textview_border"
            android:textColor="#000000"
            android:layout_width="85dp"
            android:layout_height="31dp"
            android:autoSizeTextType="uniform"
            android:gravity="center_horizontal"
            android:text="纬度:" />

        <TextView
            android:background="@drawable/textview_border"
            android:textColor="#000000"
            android:id="@+id/latiude_tv"
            android:layout_width="325dp"
            android:layout_height="31dp"
            android:gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin5"
        android:layout_width="match_parent"
        android:layout_height="31dp">

        <TextView
            android:background="@drawable/textview_border"
            android:textColor="#000000"
            android:layout_width="85dp"
            android:layout_height="31dp"
            android:autoSizeTextType="uniform"
            android:gravity="center_horizontal"
            android:text="经度:" />

        <TextView
            android:background="@drawable/textview_border"
            android:textColor="#000000"
            android:id="@+id/longitude_tv"
            android:layout_width="325dp"
            android:layout_height="31dp"
            android:gravity="center_horizontal" />
    </LinearLayout>


    <com.amap.api.maps.MapView
        android:id="@+id/route_map"
        android:layout_width="match_parent"
        android:layout_height="500dp"></com.amap.api.maps.MapView>

</LinearLayout>